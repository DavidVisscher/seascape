<%= if @current_user == nil do %>
  Render homepage here
<% else %>
  Inside the logged in application.

  Current page: <%= inspect(@state.ephemeral.current_page) %>

  <%= case @state.ephemeral.current_page do %>
    <% [] -> %>
      <%= live_component(@socket, SeascapeWeb.IndexComponent, state: @state) %>
    <% ["clusters", cluster_id] -> %>
        <%= live_component(@socket, SeascapeWeb.ClusterComponent, cluster: @state.persistent.clusters[cluster_id]) %>
    <% _other -> %>
    <p>
      Unknown page.

      <%= live_redirect to: Routes.live_path(@socket, SeascapeWeb.MainLive, []) do %>
      Go back home
      <% end %>
    </p>
  <% end %>
<% end %>
